# .editorconfig

# Top-most EditorConfig file
root = true

# Universal defaults for all files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

# JavaScript, TypeScript, and related files
[*.{js,mjs,cjs,ts,mts,cts}]
indent_style = space
indent_size = 2

# JSON files (strict)
[*.json]
indent_style = space
indent_size = 2
insert_final_newline = true

# JSON with comments (tsconfig, etc.)
[*.jsonc]
indent_style = space
indent_size = 2

# JSON5 files
[*.json5]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2
end_of_line = lf

# PowerShell scripts
[*.{ps1,psm1,psd1}]
indent_style = space
indent_size = 2
end_of_line = crlf

# CSS files
[*.css]
indent_style = space
indent_size = 2

# Configuration files
[{package.json,package-lock.json,composer.json}]
indent_style = space
indent_size = 2

# Makefile (requires tabs)
[Makefile]
indent_style = tab
indent_size = 4

# Git commit messages
[COMMIT_EDITMSG]
max_line_length = 72

# License and documentation files
[{LICENSE,README,CHANGELOG,CONTRIBUTING}*]
indent_style = space
indent_size = 2
