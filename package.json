{
  "name": "nmapping-plus",
  "version": "0.1.0",
  "description": "Self-hosted Network Mapping with Real-time Web Dashboard - A comprehensive, zero-cost network monitoring solution that combines Nmap scanning, Git-based change tracking, and a modern web dashboard for real-time network visibility.",
  "main": "dashboard/dashboard_app.py",
  "scripts": {
    "version": "npm version",
    "changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s",
    "release": "npm run changelog && git add CHANGELOG.md && git commit -m \"docs: update CHANGELOG for release\" && npm version",
    "release:patch": "npm run release patch",
    "release:minor": "npm run release minor",
    "release:major": "npm run release major",
    "preversion": "npm run test:lint",
    "version:git": "git add package.json CHANGELOG.md",
    "postversion": "git push && git push --tags",
    "lint:shell": "bash scripts/lint_shell.sh",
    "shellcheck:install": "pwsh -NoProfile -ExecutionPolicy Bypass -File scripts/install_shellcheck.ps1",
    "shellcheck:install:posix": "bash scripts/install_shellcheck.sh",
    "test:lint": "npm run lint:shell",
    "build": "echo 'No frontend build required'",
    "start": "python3 dashboard/dashboard_app.py",
    "setup": "bash scripts/create_nmap_lxc.sh",
    "setup:scanner": "bash scripts/install_nmap_fingplus.sh",
    "setup:dashboard": "bash scripts/install_dashboard_enhanced.sh",
    "sync": "bash scripts/sync_dashboard.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/th3Wheel/nmapping-plus.git"
  },
  "keywords": [
    "network-mapping",
    "nmap",
    "network-monitoring",
    "security-scanning",
    "web-dashboard",
    "proxmox",
    "lxc",
    "git-tracking",
    "real-time",
    "network-discovery",
    "vulnerability-scanner",
    "self-hosted",
    "open-source"
  ],
  "author": "th3Wheel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/th3Wheel/nmapping-plus/issues"
  },
  "homepage": "https://github.com/th3Wheel/nmapping-plus#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0",
    "python": ">=3.9.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^18.6.3",
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.39.1",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "conventional-changelog-cli": "^4.1.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "prettier": "^3.0.0",
    "typescript-eslint": "^8.47.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ],
    "*.py": [
      "black --check",
      "flake8"
    ],
    "*.sh": [
      "shellcheck"
    ]
  },
  "config": {
    "commitizen": {
      "path": "conventional-changelog"
    }
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/th3Wheel"
  },
  "release": {
    "branches": [
      "main",
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
